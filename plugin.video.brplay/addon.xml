<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.brplay" version="0.0.14" name="BR play" provider-name="brplayer">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
		<import addon="script.module.beautifulsoup" version="3.2.1"/>
		<import addon="script.module.requests" version="0.13.2"/>
		<import addon="script.module.buggalo" version="1.1.6"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Globo Play, Globosat Play and Premium Channels on Kodi</summary>
		<description>Brazilian video streaming services for subscribers</description>
		<platform>all</platform>
		<license>GPL3</license>
		<source>https://github.com/olavopeixoto/plugin.video.brplay</source>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshots/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshots/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshots/screenshot-03.jpg</screenshot>
		</assets>
		<news>0.0.14
			- inputstream.adaptive addon support (enable Krypton and Leia playback)
        </news>
	</extension>
</addon>